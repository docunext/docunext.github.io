class Bank
    def initialize( name, address, city, state, zip, offices, website )
        @name = name
        @address = address
        @city = city
        @state = state
        @zip = zip
        @offices = offices
        @wikiname = name.gsub(/ /,'_')
    end
    def get_binding
      binding
    end

end

template = %{
    <b><%= @name %></b><br/>
    <%= @address %><br/>
    <%= @city %>, <%= @state %> <%= @zip %><br/>
    <br/>Number of offices: <%= @offices %><br/>
    IB Wiki: <a href="/wiki/<%= @wikiname %>"><%= @name %></a>
}.gsub(/^  /, '')

rhtml = ERB.new(template)
mybank = Bank.new(row[0],row[1],row[2],row[3],row[4],row[5],row[6])
